@model ASM.Models.CustomerDetail

@{
    ViewData["Title"] = "DetailCustomer";
    Layout = "~/Views/Shared/_LayoutCustomerDetail.cshtml";
}
@section Css{
    <link href="~/css/CustomerDetail.css" rel="stylesheet" />
}
<form method="post" asp-action="DetailCustomer" style="height: 450px;width:600px;margin-left:450px" class="dl-horizontal">
    <input asp-for="CustomerId" type="hidden" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Age</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Delivery Address</label>
        <input asp-for="DeliveryAddress" class="form-control" />
        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
    @{
        string color = "";
        if (ViewBag.Error == "Invalid Info")
        {
            color = "red";
        }
        else
        {
            color = "green";
        }
    }
    <div class="form-control">
        <span style="color:@color" class="form-control">@ViewBag.Error</span>
    </div>
</form>

