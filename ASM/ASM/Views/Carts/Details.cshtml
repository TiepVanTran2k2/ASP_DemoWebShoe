@model IEnumerable<ASM.Models.CartDetail>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<h2>Details</h2>

<div >
    <h4>Cart</h4>
    <hr />
    <dl class="dl-horizontal" style="height:420px;width:350px; border:1px solid black;margin-left:5px">
        <dt>
            Day Create:
        </dt>
        <dd>
            @ViewBag.Day
        </dd>
        <dt>
            Status:
        </dt>
        <dd>
            @ViewBag.Status
        </dd>
        <dt>
            Sum Price:
        </dt>
        <dd>
            @ViewBag.SumPrice
        </dd>
        <dt>
            Customer`s Name:
        </dt>
        <dd>
            @ViewBag.Customer
        </dd>
        <dt>
            Recipient`s Name:
        </dt>
        <dd>
            @ViewBag.Recipient
        </dd>
        <dt>
            Phone:
        </dt>
        <dd>
            @ViewBag.Phone
        </dd>
        <dt>
            Delivery address:
        </dt>
        <dd>
            @ViewBag.address
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantily)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Product.Name
            </td>
            <td>
                <img src="~/product_imgs/@item.Product.Images" style="height:100px; width:150px" />
            </td>
            <td>
                @item.Product.Price
            </td>
            <td>
                @item.Quantily
            </td>
            <td>
                @item.Total
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
    @if (ViewBag.Status == false)
    {
        <form method="post" asp-controller="Carts" asp-action="Checked">
            <input type="hidden" value="@ViewBag.id" name="id" />
            <input type="submit" class="btn btn-success" value="Checked" />
        </form>
    }
</div>
